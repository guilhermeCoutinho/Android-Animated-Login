<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup_fragment"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp"
    tools:showIn="@layout/activity_fullscreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_noise2"

        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon2"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:layout_marginTop="25dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing=".3"
            android:textColor="@color/light_text_color"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full feature, super fast upload speed"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing=".05"
            android:textColor="@color/light_text_color_secondary"
            android:textAlignment="center"
            />
        <LinearLayout
            android:id="@+id/signup_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="70dp"
            android:paddingLeft="70dp"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            >
                <EditText style="@style/input_login_et"
                    android:hint="Username"
                    android:inputType="textPersonName"/>
                <View style="@style/ruler"/>

                <EditText style="@style/input_login_et"
                    android:hint="Email"
                    android:inputType="textEmailAddress"/>
                <View style="@style/ruler" />

                <EditText style="@style/input_login_et"
                    android:hint="Password"
                    android:inputType="textPassword"/>
                <View style="@style/ruler" />

                <EditText style="@style/input_login_et"
                    android:hint="Confirm password"
                    android:inputType="textPassword"/>
                <View style="@style/ruler" />

                <Button
                    style="@style/input_login_btn"
                    android:text="SIGN UP"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>